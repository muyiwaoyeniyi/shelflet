<% provide(:title, 'Change Password') %>




  

     <div class="MainBodyWrapper">

      <%= render "shared/searchbar" %>

<div class='container'>
     <%= devise_error_messages! %>
</div>
       <div class="container">
        <div class="row">         
        <div class="span12">
        <div id="SettingsBoxWrapper">
           <div id="FormsWrapper">
           <div id="resetFormsWrapper">

           	<p class="text-fix2" style="margin-top: 10px;"><strong style="font-size: 20px;">Change your password</strong></p>
            
           <fieldset>

           	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>

           	   <%= f.hidden_field :reset_password_token %>
             <div class="control-group">
                 <div class="controls">

                 	<%= f.password_field :password, :class => 'input-xlarge required', :id => "Password", :placeholder => "Enter New Password" %>

                   </div>
                 </div>

			<div class="control-group">
                 <div class="controls">

				    <%= f.password_field :password_confirmation, :class => 'input-xlarge required', :id => "Password", :placeholder => "Confirm New Password" %>
                 	
                   </div>
                 </div>

                 <div><%= f.submit "Change my password", :class => "btn btn-info", :style => "margin-bottom: 10px" %>

            <% end %>

           </fieldset>
         </div>
         </div>
         </div>
         </div>
        </div>
     </div>
