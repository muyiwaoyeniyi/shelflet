<% provide(:title, 'Reset Password') %>  

     <div class="MainBodyWrapper">

      <%= render "shared/searchbar" %>

      <div class='container'>
     <%= devise_error_messages! %>

   </div>
       <div class="container">
        <div class="row">         
        <div class="span12">
        <div id="SettingsBoxWrapper">
           <div id="FormsWrapper">
           <div id="resetFormsWrapper">
            <p class="text-fix2"><strong>Enter your email address 
                below and we'll send you password reset instructions.</strong></p>
           <fieldset>

           	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :id => "resetForm", :class => "form-horizontal" }) do |f| %>

             <div class="control-group">
                 <div class="controls">

                 	<%= f.email_field :email, :class => 'input-xlarge required email', :id => "EmailAddress", :placeholder => "Enter Email Address", :style => "margin-bottom: 4px" %>

                   </div>
                 </div>

                 <%= f.submit "Reset Password", :class => "btn btn-info", :style => "margin-bottom: 10px" %>
                  <a style="margin-bottom: 10px;" class="btn" href="/users/login">Return to Login</a>

            <% end %>

           </fieldset>
         </div>
         </div>
         </div>
         </div>
        </div>
     </div>
