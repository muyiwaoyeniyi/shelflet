      <div class="navbar">
         <div class="navbar-inner">
            <div class="container">
              <a class="brand" href="/">
               <%= image_tag "shelflet.jpg", :alt => "Shelflet" %>
              </a>

              <!-- Everything you want hidden at 940px or less, place within here -->
              <div class="nav-collapse">
                <ul class="nav">
                  <li><a style="font-size:20px; color: white; margin-left: -20px;" href="/">Shelflet</a></li>
                  <li class="divider-vertical"></li>
                  <li><a href="/list"><strong>List</strong></a></li>         <!--class="active"--> 
                  <li class="divider-vertical"></li>
